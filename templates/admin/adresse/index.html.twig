{% extends 'base.html.twig' %}

{% block title %}Adresse index{% endblock %}

{% block body %}
    <h1>Adresse index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Label</th>
                <th>Number</th>
                <th>Street</th>
                <th>City</th>
                <th>Country</th>
                <th>Code Postal</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for adresse in adresses %}
            <tr>
                <td>{{ adresse.id }}</td>
                <td>{{ adresse.label }}</td>
                <td>{{ adresse.number }}</td>
                <td>{{ adresse.street }}</td>
                <td>{{ adresse.city }}</td>
                <td>{{ adresse.country }}</td>
                <td>{{ adresse.codepostal }}</td>
                <td>
                    <a href="{{ path('admin_adresse_show', {'id': adresse.id}) }}">show</a>
                    <a href="{{ path('admin_adresse_edit', {'id': adresse.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_adresse_new') }}">Create new</a>
{% endblock %}
